@model FitnessCenter.Models.Service

@{
    ViewData["Title"] = "Hizmet Ekle";
}

<div class="container mt-4">
    <h2>Hizmet Ekle</h2>
    <hr />
    
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="mb-3">
                    <label asp-for="GymId" class="form-label">Spor Salonu</label>
                    <select asp-for="GymId" class="form-select" asp-items="ViewBag.GymId">
                        <option value="">-- Spor Salonu Seçin --</option>
                    </select>
                    <span asp-validation-for="GymId" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Ad</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Açıklama</label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="DurationInMinutes" class="form-label">Süre (Dakika)</label>
                        <input asp-for="DurationInMinutes" class="form-control" type="number" min="1" max="1440" />
                        <span asp-validation-for="DurationInMinutes" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Price" class="form-label">Fiyat (₺)</label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="mb-3">
                    <input type="submit" value="Ekle" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

