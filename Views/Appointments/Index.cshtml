@model IEnumerable<FitnessCenter.Models.Appointment>

@{
    ViewData["Title"] = "Randevular";
    var isAdmin = ViewBag.IsAdmin as bool? ?? false;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>@(isAdmin ? "Tüm Randevular" : "Randevularım")</h2>
        @if (!isAdmin)
        {
            <a asp-action="Create" class="btn btn-primary">Yeni Randevu Al</a>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    @if (isAdmin)
                    {
                        <th>Üye</th>
                    }
                    <th>Antrenör</th>
                    <th>Hizmet</th>
                    <th>Spor Salonu</th>
                    <th>Tarih & Saat</th>
                    <th>Süre</th>
                    <th>Fiyat</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @if (isAdmin)
                        {
                            <td>@(item.Member?.ApplicationUser?.Email ?? "N/A")</td>
                        }
                        <td>@(item.Trainer?.FirstName) @(item.Trainer?.LastName)</td>
                        <td>@(item.Service?.Name)</td>
                        <td>@(item.Gym?.Name)</td>
                        <td>
                            @item.StartDateTime.ToString("dd/MM/yyyy HH:mm")
                        </td>
                        <td>@((item.EndDateTime - item.StartDateTime).TotalMinutes) dk</td>
                        <td>@item.PriceAtBooking.ToString("C")</td>
                        <td>
                            <span class="badge @(item.Status == AppointmentStatus.Approved ? "bg-success" : 
                                                item.Status == AppointmentStatus.Cancelled ? "bg-danger" : "bg-warning")">
                                @(item.Status == AppointmentStatus.Pending ? "Beklemede" : 
                                  item.Status == AppointmentStatus.Approved ? "Onaylandı" : "İptal Edildi")
                            </span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Detaylar</a>
                            @if (isAdmin && item.Status == AppointmentStatus.Pending)
                            {
                                <form asp-action="ChangeStatus" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <input type="hidden" name="status" value="@AppointmentStatus.Approved" />
                                    <button type="submit" class="btn btn-sm btn-success">Onayla</button>
                                </form>
                                <form asp-action="ChangeStatus" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <input type="hidden" name="status" value="@AppointmentStatus.Cancelled" />
                                    <button type="submit" class="btn btn-sm btn-danger">İptal Et</button>
                                </form>
                            }
                            @if (!isAdmin && item.Status != AppointmentStatus.Cancelled)
                            {
                                <form asp-action="Cancel" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="submit" class="btn btn-sm btn-danger" 
                                            onclick="return confirm('Bu randevuyu iptal etmek istediğinizden emin misiniz?');">
                                        İptal Et
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

