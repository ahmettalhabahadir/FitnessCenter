@model FitnessCenter.Models.Gym

@{
    ViewData["Title"] = "Spor Salonu Sil";
}

<div class="container mt-4">
    <h2>Spor Salonu Sil</h2>
    <h3 class="text-danger">Bunu silmek istediğinizden emin misiniz?</h3>
    <hr />
    
    <dl class="row">
        <dt class="col-sm-2">Ad</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
        
        <dt class="col-sm-2">Adres</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Address)</dd>
        
        <dt class="col-sm-2">Telefon</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Phone)</dd>
        
        <dt class="col-sm-2">E-posta</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
    </dl>
    
    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sil" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </form>
</div>

